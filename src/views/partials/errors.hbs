{{#if error}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{error}}
    <button type="button" class="float-right" data-bs-dismiss="alert" aria-label="Close"><i
            class="fas fa-backspace"></i></button>
</div>
{{/if}}


{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{text}}
    <button type="button" class="float-right" data-bs-dismiss="alert" aria-label="Close"><i
            class="fas fa-backspace"></i></button>
</div>
{{/each}}